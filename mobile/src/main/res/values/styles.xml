<resources>

    <style name="VoiceMailFabButton">
        <item name="fab_colorNormal">#009688</item>
        <item name="fab_colorPressed">#00796B</item>
        <item name="fab_colorRipple">#B2DFDB</item>
    </style>

    <style name="SendSmsFabButton">
        <item name="fab_colorNormal">#9E9E9E</item>
        <item name="fab_colorPressed">#616161</item>
        <item name="fab_colorRipple">#F5F5F5</item>
    </style>

    <style name="AddContactFabButton">
        <item name="fab_colorNormal">#03A9F4</item>
        <item name="fab_colorPressed">#0288D1</item>
        <item name="fab_colorRipple">#B3E5FC</item>
    </style>

    <style name="CallFabButton">
        <item name="fab_colorNormal">#4CAF50</item>
        <item name="fab_colorPressed">#388E3C</item>
        <item name="fab_colorRipple">#C8E6C9</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/groupHeaderColor</item>
    </style>

    <style name="PhoneNumber">
        <item name="android:textColor">?attr/contactNameColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="PhoneNumberSecond">
        <item name="android:textColor">?attr/contactDescriptionColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/default_margin_4</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PhoneNumberIcon">
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:maxWidth">52dip</item>
        <item name="android:maxHeight">52dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
